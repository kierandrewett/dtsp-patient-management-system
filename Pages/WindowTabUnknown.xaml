<UserControl x:Class="PMS.Pages.WindowTabUnknown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PMS.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Label Content="Something went wrong." VerticalAlignment="Center" FontSize="16" HorizontalAlignment="Center"/>
            <Label Content="We were unable to locate that resource, please try again." HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14">
                <Label.Foreground>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.GrayTextColorKey}}"/>
                </Label.Foreground>
            </Label>
        </StackPanel>


    </Grid>
</UserControl>
