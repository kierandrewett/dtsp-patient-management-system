<UserControl x:Class="PMS.Components.PMSHeaderClock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PMS.Components"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="100">
    <StackPanel Orientation="Horizontal" Margin="0,0,0,0" ToolTip="{Binding DateTimeTooltip}">
        <local:PMSIcon Width="16" Height="16" Fill="White" Source="{StaticResource ClockIcon}" />
        <Label Grid.Column="1" VerticalAlignment="Center" Foreground="White"  Margin="4,0,0,0">
            <StackPanel>
                <TextBlock Name="Time" TextWrapping="Wrap" HorizontalAlignment="Center">
                12:00
                </TextBlock>
                <TextBlock Name="Date" TextWrapping="Wrap" HorizontalAlignment="Center">
                01/01/2024
                </TextBlock>
            </StackPanel>

        </Label>
    </StackPanel>
</UserControl>
