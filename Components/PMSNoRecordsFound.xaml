<UserControl x:Class="PMS.Components.PMSNoRecordsFound"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PMS.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel VerticalAlignment="Center" Grid.Row="2">
        <Label Content="Nothing here yet." VerticalAlignment="Center" FontSize="14" HorizontalAlignment="Center"/>
        <Label Content="No records were found for your query." HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="13" Margin="0,-6,0,0">
            <Label.Foreground>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.GrayTextColorKey}}"/>
            </Label.Foreground>
        </Label>
    </StackPanel>
</UserControl>
